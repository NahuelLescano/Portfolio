---
import { ClientRouter } from "astro:transitions";

import Footer from "@/sections/Footer.astro";
import NavBar from "@/sections/NavBar.astro";

import "@/styles/global.css";
import "@fontsource-variable/onest";

type Lang = "es" | "en";

interface Props {
    description?: string;
    title?: string;
    lang?: Lang;
}

const {
    description = "Contratame para crear tu aplicación web o móvil. Desarrollador web con React o Angular. Desarrollo backend",
    title = "Porfolio de Nahuel - Fullstack developer junior",
    lang = "es",
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />

        <!-- fonts preloading -->
        <link
            rel="preload"
            href="/fonts/onest-cyrillic-200-normal"
            as="font"
            type="font/woff2"
            crossorigin="anonymous"
        />
        <link
            rel="preload"
            href="/fonts/onest-cyrillic-700-normal"
            as="font"
            type="font/woff2"
            crossorigin="anonymous"
        />

        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="description" content={description} />
        <title>{title}</title>
        <ClientRouter />

        <!-- og meta tags -->
        <meta property="og:url" content="https://portfolio-nahuel-lescano.vercel.app/" />
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta
            property="og:image"
            content="https://portfolio-nahuel-lescano.vercel.app/profile.webp"
        />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <meta property="og:image:type" content="image/webp" />
        <meta property="og:image:alt" content="Nahuel Lescano - Fullstack Developer" />
        <meta property="og:locale" content="es_ES" />
        <meta property="og:site_name" content="Porfolio de Nahuel" />

        <meta property="article:author" content="Nahuel Lescano" />
        <meta property="profile:first_name" content="Nahuel" />
        <meta property="profile:last_name" content="Lescano" />

        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:creator" content="@nahuel0495" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta
            name="twitter:image"
            content="https://portfolio-nahuel-lescano.vercel.app/profile.webp"
        />
    </head>
    <body>
        <NavBar />
        <slot />
        <Footer />
    </body>
</html>
