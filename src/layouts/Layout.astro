---
import { ClientRouter } from "astro:transitions";

import Footer from "@/sections/Footer.astro";
import NavBar from "@/sections/NavBar.astro";

import "@/styles/global.css";
import "@fontsource-variable/onest";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />

        <!-- fonts preloading -->
        <link
            rel="preload"
            href="/fonts/onest-cyrillic-200-normal"
            as="font"
            type="font/woff2"
            crossorigin="anonymous"
        />
        <link
            rel="preload"
            href="/fonts/onest-cyrillic-700-normal"
            as="font"
            type="font/woff2"
            crossorigin="anonymous"
        />

        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta
            name="description"
            content="Contratame para crear tu aplicación web o móvil. Desarrollador web con React o Angular. Desarrollo backend"
        />
        <title>Portafolio de Nahuel - Fullstack developer junior</title>
        <ClientRouter />
    </head>
    <body>
        <NavBar />
        <slot />
        <Footer />
    </body>
</html>
