---
import { ClientRouter } from "astro:transitions";

import Footer from "@/sections/Footer.astro";
import NavBar from "@/sections/NavBar.astro";

import "@/styles/global.css";
import "@fontsource-variable/onest";

type Lang = "es" | "en";

interface Props {
  description: string;
  title: string;
  lang: Lang;
  url?: string;
  ogImage?: string;
}

const {
  description,
  title,
  lang,
  url = "https://portfolio-nahuel-lescano.vercel.app/",
  ogImage = "/profile.webp",
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- fonts preloading -->
    <link
      rel="preload"
      href="/fonts/onest-cyrillic-200-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/onest-cyrillic-700-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />

    <!-- image preload -->
    <link
      rel="preload"
      href="/profile.webp"
      as="image"
      type="image/webp"
      crossorigin="anonymous"
    />

    <meta name="description" content={description} />
    <title>{title}</title>
    <ClientRouter />

    <!-- canonical -->
    <link rel="canonical" href={url} />

    <!-- og meta tags -->
    <meta property="og:url" content={url} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${url}${ogImage}`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="627" />
    <meta
      property="og:image:alt"
      content="Nahuel Lescano - Fullstack Developer"
    />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Porfolio de Nahuel" />

    <meta property="og:locale" content="en_EN" />
    <meta property="og:site_name" content="Nahuel Lescano portfolio" />

    <meta property="article:author" content="Nahuel Lescano" />
    <meta property="profile:first_name" content="Nahuel" />
    <meta property="profile:last_name" content="Lescano" />

    <!-- twitter for cross-compat -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@nahuel0495" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content= "https://x.com/nahuel0495/photo" />

  </head>
  <body>
    <NavBar />
    <slot />
    <Footer />
  </body>
</html>
