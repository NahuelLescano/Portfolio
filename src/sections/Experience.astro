---
import { EXPERIENCES } from "@/consts/experiences";
import PythonIcon from "@/icons/PythonIcon.astro";
import ReactIcon from "@/icons/ReactIcon.astro";
import ExpressIcon from "@/icons/ExpressIcon.astro";
import FastapiIcon from "@/icons/FastapiIcon.astro";
import SqlalchemyIcon from "@/icons/SqlalchemyIcon.astro";
import DockerIcon from "@/icons/DockerIcon.astro";

const iconMap = {
  PythonIcon: PythonIcon,
  ReactIcon: ReactIcon,
  ExpressIcon: ExpressIcon,
  FastapiIcon: FastapiIcon,
  SqlalchemyIcon: SqlalchemyIcon,
  DockerIcon: DockerIcon,
};
---

<ul class="relative mt-16">
  {
    EXPERIENCES.map(({ date, title, company, description, tags }) => (
      <div class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-black/20 dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]">
        <div class="relative pb-12 md:col-span-2">
          <div class="sticky top-0">
            <span class="text-yellow-400 -left-[42px] absolute rounded-full text-5xl">
              &bull;
            </span>

            <h3 class="text-xl font-bold text-yellow-400">{title}</h3>
            <h4 class="font-semibold text-xl text-gray-600 dark:text-white">
              {company}
            </h4>
            <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80">
              {date}
            </time>
          </div>
        </div>

        <section class="relative flex flex-col gap-2 pb-4 text-gray-600 dark:text-gray-300 md:col-span-3 text-pretty">
          {description}
          <footer class="mt-4">
            <ul class="flex flex-row flex-wrap gap-2">
              {tags.map(({ icon, class: className, name }) => {
                const IconComponent = iconMap[icon as keyof typeof iconMap];
                return (
                  <li>
                    <span
                      class={`${className} flex gap-x-2 rounded-full text-xs py-1 px-2 items-center`}
                    >
                      {IconComponent ? (
                        <IconComponent class="size-4" />
                      ) : (
                        <span class="size-4 flex items-center justify-center text-xs">
                          â€¢
                        </span>
                      )}
                      {name}
                    </span>
                  </li>
                );
              })}
            </ul>
          </footer>
        </section>
      </div>
    ))
  }
</ul>
