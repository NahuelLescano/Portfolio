---
import SocialContainer from "@/components/SocialContainer.astro";
import { CV_URL, CV_URL_EN, EMAIL, LINKEDIN_URL } from "@/consts/links";
import CvIcon from "@/icons/CvIcon.astro";
import LinkedInIcon from "@/icons/LinkedInIcon.astro";
import MailIcon from "@/icons/MailIcon.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/ui";

const lang = getLangFromUrl(Astro.url);
const cv = lang === "es" ? CV_URL : CV_URL_EN;

const t = useTranslations(lang);
---

<div class="max-w-4xl">
  <div
    class="flex flex-col md:flex-row gap-4 md:gap-8 items-center md:items-start"
  >
    <img
      src="/profile.webp"
      alt="Nahuel Profile Picture"
      class="rounded-lg size-32 md:size-52 object-cover flex-shrink-0"
    />
    <div class="flex-1 text-center md:text-left">
      <h3
        class="text-lg md:text-2xl lg:text-5xl font-bold tracking-tight text-gray-800 dark:text-white"
      >
        {t("hero.greeting")}
      </h3>
      <p
        class="mt-4 md:mt-6 text-lg md:text-xl text-gray-800 dark:text-gray-200 text-pretty
                dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold [&>strong]:text-xl"
        set:html={t("hero.description")}
      />
    </div>
  </div>

  <nav
    class="flex flex-wrap gap-3 md:gap-4 mt-6 md:mt-8 justify-center md:justify-start"
  >
    <SocialContainer href={EMAIL.url}>
      <MailIcon class="size-6" />
      {t("hero.contact")}
    </SocialContainer>
    <SocialContainer href={LINKEDIN_URL.url}>
      <LinkedInIcon class="size-6" />
      LinkedIn
    </SocialContainer>
    <SocialContainer href={cv.url}>
      <CvIcon class="size-6" />
      {t("hero.downloadCv")}
    </SocialContainer>
  </nav>
</div>
